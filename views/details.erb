<h1><%= @post['title']%></h1>
<p style="font-size: 75%">
    Author: <%= @post['author']%><br>
    Added at <%= @post['created_date'] %>
</p>
<p><%= @post['content'] %></p>
<h2>Comments:</h2>
<hr>
<% @comments.each do |comment| %>
    <p><%= comment['content'] %></p>
    <p style="font-size: 75%">Added at <%= comment['created_date'] %></p>
    <hr>                           
<% end %>
<h2>Add New Commentary:</h2>
<form action="/details/<%= @post['id'] %>" method="post">
    <div class="form-group">
        <textarea class="form-control" id="exampleFormControlTextarea1" rows="5" name="content" placeholder="Type commentary text here..."></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>